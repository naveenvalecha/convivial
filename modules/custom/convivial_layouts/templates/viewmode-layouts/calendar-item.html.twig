{#
/**
* Calendar item with date region.
*
* List of regions: date, title, info, summary, tags.
*/
#}
{% set classes = [
  'calendar-item',
] %}

{% set preview_layout %}
  <div{{ attributes.addClass(classes) }}>
    <div{{ region_attributes.date.addClass('layout__region', 'layout__region--date', 'calendar-item__date') }}>
      {{ content.date }}
    </div>
    <div class="calendar-item__content">
      <h3{{ region_attributes.title.addClass('layout__region', 'layout__region--title', 'calendar-item__title') }}>
        {{ content.title }}
      </h3>
      <div{{ region_attributes.info.addClass('layout__region', 'layout__region--info', 'calendar-item__info') }}>
        {{ content.info }}
      </div>
      <div{{ region_attributes.summary.addClass('layout__region', 'layout__region--summary', 'calendar-item__summary') }}>
        {{ content.summary }}
      </div>
      <div{{ region_attributes.tags.addClass('layout__region', 'layout__region--tags', 'calendar-item__tags') }}>
        {{ content.tags }}
      </div>
    </div>
  </div>
{% endset %}

{% set render_layout %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.date|render|striptags|trim %}
      <div{{ region_attributes.date.addClass('layout__region', 'layout__region--date', 'calendar-item__date') }}>
        {{ content.date }}
      </div>
    {% endif %}
    {% if content %}
      <div class="calendar-item__content">
        {% if content.title|render|striptags|trim %}
          <h3{{ region_attributes.title.addClass('layout__region', 'layout__region--title', 'calendar-item__title') }}>
            {{ content.title }}
          </h3>
        {% endif %}
        {% if content.info|render|striptags|trim %}
          <div{{ region_attributes.info.addClass('layout__region', 'layout__region--info', 'calendar-item__info') }}>
            {{ content.info }}
          </div>
        {% endif %}
        {% if content.summary|render|striptags|trim %}
          <div{{ region_attributes.summary.addClass('layout__region', 'layout__region--summary', 'calendar-item__summary') }}>
            {{ content.summary }}
          </div>
        {% endif %}
        {% if content.tags|render|striptags|trim %}
          <div{{ region_attributes.tags.addClass('layout__region', 'layout__region--tags', 'calendar-item__tags') }}>
            {{ content.tags }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
{% endset %}

{% if in_preview %}
  {{ preview_layout }}
{% else %}
  {{ render_layout }}
{% endif %}
